{
  "name": "reloj-widget",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .", 
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A simple clock widget built with Electron",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-packager": "^17.1.2",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-drag": "^2.0.0"
  },
  "build": {
    "appId": "com.alejandro.reloj-widget",
    "productName": "Reloj Widget",
    "win": {
      "target": "nsis", 
      "icon": "icon.ico" 
    },
    "mac": {
      "target": "dmg", 
      "icon": "icon.icns" 
    },
    "linux": {
      "target": "AppImage", 
      "icon": "icon.png" 
    },
    "directories": {
      "output": "dist" 
    }
  }
}
